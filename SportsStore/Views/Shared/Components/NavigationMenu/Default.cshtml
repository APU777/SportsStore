@model IEnumerable<string>

<a class="btn btn-block btn-default card card-header"
    asp-action="List" asp-controller="Product"
    asp-route-category="">
    Home
</a>

@foreach (string category in Model)
{
    <a class="btn btn-block border-dark
            @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-default")"
       asp-action="List" asp-controller="Product"
       asp-route-category="@category" asp-route-page="1">
        @category
    </a>
}